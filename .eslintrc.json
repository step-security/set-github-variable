{
    "env": {
        "node": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "semi": ["error", "always"]
    },
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module"
    },
    "ignorePatterns": [
    "node_modules/",
    "dist/"
  ]
}
